#include <bits/stdc++.h> 
int maximumProduct(vector<int> &arr, int n)
{
	int maxp = INT_MIN;
	int curr = 1;

	for(int i = 0; i < n; i++){
		curr = curr * arr[i];
		maxp = max(maxp, curr);

		if(curr == 0){
			curr = 1;
		}
	}

	curr = 1;

	for(int i = n-1; i >= 0; i--){
		curr = curr * arr[i];
		maxp = max(maxp, curr);

		if(curr == 0){
			curr = 1;
		}
	}

	return maxp;
	
}
