#include <bits/stdc++.h> 
int pairSum(vector<int> &arr, int n, int target){
	int left = 0;
	int right = n - 1;
	int count = 0;
	while( left < right){
		int sum = arr[left] + arr[right];
		if( sum == target){
			count++;
			left++;
			right--;
		}else if ( sum < target){
			left++;
		}else{
			right--;
		}
	}
	if(count == 0){
		return -1;
	}else{
		return count;
	}
}
