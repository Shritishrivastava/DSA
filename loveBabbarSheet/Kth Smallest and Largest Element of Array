vector<int> kthSmallLarge(vector<int> &arr, int n, int k)
{
	for(int i = 0; i < n-1; i++){
		int min_idx = i;
		for(int j = i+1; j < n; j++){
			if(arr[min_idx] > arr[j]){
				min_idx = j;
			}
		}
		swap(arr[i], arr[min_idx]);
	}
	
	int kth_smallest = arr[k-1];
	int kth_largest = arr[n-k];

	return {kth_smallest, kth_largest};
}
