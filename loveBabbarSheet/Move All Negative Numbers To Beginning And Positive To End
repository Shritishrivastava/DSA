#include <bits/stdc++.h> 
vector<int> separateNegativeAndPositive(vector<int> &arr){
    int left = 0;
    int right = arr.size() - 1;

    while( left <= right){
        if(arr[left] < 0 && arr[right] >= 0){
            left++;
            right--;
        }
        else if(arr[left] < 0 && arr[right] <= 0){
            left++;
        }
        else if(arr[left] > 0 && arr[right] >= 0){
            right--;
        }
        else if(arr[left] >= 0 && arr[right] < 0){
            swap(arr[left], arr[right]);
            left++;
            right--;
        }
    }
    return arr;
