#include <bits/stdc++.h> 
int minSubArrayLen(vector<int>& arr, int target, int n) {
     int i = 0;
     int j = 0;
     int sum = 0;
     int minlen = INT_MAX;
     for(j = 0; j < n; j++){
         sum = sum + arr[j];
         while(sum > target){
             minlen = min(minlen, j+1-i);
             sum = sum - arr[i];
             i++;
         }
     }
     if(minlen == INT_MAX){
         return 0;
     }else{
         return minlen;
     }
}
