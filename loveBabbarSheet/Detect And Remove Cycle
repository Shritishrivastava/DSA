bool detectAndRemoveCycle(Node* head)
{
	Node* slow = head;
	Node* fast = head;

	while(fast!=nullptr && fast->next!= nullptr){
		slow = slow->next;
		fast = fast->next->next;
		if(slow == fast){
			break;
		}
	}
	if(fast==nullptr || fast->next->next == nullptr){
		return false;
	}
	slow = head;
	while(slow!=fast){
	slow = slow->next;
	fast = fast->next;
	}
	Node* temp = slow;
	while(temp->next != slow){
		temp = temp->next;
	}
	temp->next = nullptr;
	return true;
}
