string isPairDifferenceK(vector<int>arr, int n, int k) {
    
    int i = 0;
    int j = 1;

    while(j < n){
        
        if(i == j){
            j++;
        }
        int diff = arr[j] - arr[i];

        if(diff == k){
            return "Yes";
        }else if(diff < k){
            j++;
        }else{
            i++;
        }
    }

    return "No";
}
